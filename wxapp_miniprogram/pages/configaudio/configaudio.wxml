<form>
  <view class="cu-form-group margin-top1">
    <view class="title">内容</view>
    <input name="sound"  placeholder="门已打开" value="{{sound}}" bindinput="soundInput"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">音量</view>
    <view class="flexright">
      <slider class="mslider" bindchange="sliderChange" min="1" max="7" step="1" value="{{volume}}"  activeColor="#1cbbb4" block-size="20" show-value/>
    </view>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-green lg" bindtap="doSubmit">立即提交</button>
  </view>
</form>
