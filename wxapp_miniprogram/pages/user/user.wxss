/**user.wxss**/
page{background-color: #ffffff;}
.userbox{width:100%;height:370rpx;background:#00A950;}
.userinfo{display:flex;flex-direction:column;align-items:center;padding-top:50rpx;margin-bottom:10rpx;}
.userinfo-avatar{width:128rpx;height:128rpx;margin:20rpx auto 30rpx;border-radius:50%;}
.userinfo-nickname{color:#ffffff;font-size:13pt;}
.widgetsbox{padding-left:30rpx;}
.itemimg{width:42rpx;height:42rpx;position:absolute;top:32rpx;left:0;}
.witem{width:100%;height:100rpx;position:relative;border-bottom:1px solid #f3f3f3;box-sizing:border-box;}
.witem text{/*padding-left:40rpx;*/position:absolute;left:0rpx;color:#2F332E;top:30rpx;font-size:13pt;}
.imgarrow{position:absolute;top:33rpx;right:24rpx;width:34rpx;height:34rpx;}
/* .witem:last-child{} */
.getbtn{margin-top:130rpx;}
.menu-title{padding-left:30rpx;width:100%;height:60rpx;line-height: 60rpx;background-color:#e3e3e3;}
.card1{padding:0 24rpx 24rpx;}
.flex{display: flex;flex-direction:row;}
.bgfff{background-color: #ffffff;}
.loginbox{width: 100%;height: 330rpx;border-radius:10rpx;overflow: hidden;background-color: #ffffff;}
.lgbtn{margin: 100rpx auto 30rpx;width: 50%;height: 80rpx;text-align: center; color: #ffffff;background-color: #09BB07;border-radius: 40rpx;}
.dlwz{text-align: center;color: #454545;}
.hide{display: none;}
.lg{width:100%;}
.listrow{display:flex;flex-direction:row;padding-left:14rpx; border-bottom:1px solid #e3e3e3;position: relative;height:40px;line-height:40px;}
.shrink0{flex-shrink:0;width:34rpx;height:34rpx; color: #333;font-size: 11pt;text-align: center;}
.shrink1{flex-shrink:1;width:100%;font-size: 12pt;font-weight: bold;padding-left: 10rpx;}
.dropup{width:34rpx;height:34rpx;position: relative;top:4rpx;right: 20rpx;transform:rotate(-90deg);-webkit-transform:rotate(-90deg);}
.dropdown .dropup{transform:rotate(90deg);-webkit-transform:rotate(90deg);}
.widgetsbox.dropdown{display: none;}